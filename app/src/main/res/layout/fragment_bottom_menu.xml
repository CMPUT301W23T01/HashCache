<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/purple_gradient"
    android:paddingBottom="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="#000000"/>

    <ImageButton
        android:id="@+id/scan_qr_button"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/circle_button"
        android:elevation="6dp"
        android:src="@drawable/icon_qr"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/map_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/leaderboard_button"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/circle_button_black"
        android:elevation="6dp"
        android:src="@drawable/icon_map"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/leaderboard_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/scan_qr_button"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/circle_button_black"
        android:elevation="6dp"
        android:src="@drawable/icon_leaderboard"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/my_codes_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/scan_qr_button"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/circle_button_black"
        android:elevation="6dp"
        android:src="@drawable/icon_my_profile"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/menu_community_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/my_codes_button"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/circle_button_black"
        android:elevation="6dp"
        android:src="@drawable/icon_search"
        android:scaleType="fitCenter"/>

</RelativeLayout>