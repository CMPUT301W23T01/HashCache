<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hashcache.views.DisplayMonsterActivity"
    android:background="@drawable/background_gradient_yellow">

    <TextView
        android:id="@+id/monster_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monster Name"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="36dp"
        android:layout_marginStart="36dp"/>
    <TextView
        android:id="@+id/monster_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="score: 123456"
        android:textSize="28sp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/monster_name" />
    <ImageView
        android:id="@+id/monster_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="24dp"
        android:background="@color/HC_ash_grey"
        android:layout_below="@+id/monster_score"/>
    <ImageView
        android:id="@+id/mini_map"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/HC_ash_grey"
        android:layout_below="@+id/monster_image"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mini_map"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:text="Delete Monster"
        android:textSize="22sp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/rounded_rect_green" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_comments_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_button"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="View Cacher Comments"
        android:textSize="15sp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/rounded_rect_green" />

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/semicircle_button"
        android:elevation="6dp"
        android:src="@drawable/half_logo"
        android:scaleType="fitCenter"/>

</RelativeLayout>