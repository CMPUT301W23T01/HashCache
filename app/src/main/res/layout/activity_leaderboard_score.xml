<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/purple_rect"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/purple_gradient"/>
        <TextView
            android:id="@+id/leaderboard_score_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LEADERBOARD"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/purple_rect"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/score_tab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/menu_button_dark"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/numQR_tab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# QR"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/menu_button_light"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topQR_tab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP QR"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/menu_button_light"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/region_tab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGION"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/menu_button_light"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/first_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:padding="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_rect_green"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/three_stars"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/HC_purple"
            android:src="@drawable/icon_star_one"
            android:scaleType="fitCenter"
            android:padding="6dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/user_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/three_stars"
            android:text="SuperUser1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/score_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_one"
            android:layout_toEndOf="@id/three_stars"
            android:text="999999"
            android:textColor="@color/HC_ash_grey"
            android:textSize="24sp"
            android:layout_marginStart="24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_score"
        android:padding="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_rect_green"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/two_stars"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/HC_purple"
            android:src="@drawable/icon_star_two"
            android:scaleType="fitCenter"
            android:padding="6dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/user_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/two_stars"
            android:text="SuperUser2"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/score_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_two"
            android:layout_toEndOf="@id/two_stars"
            android:text="888888"
            android:textColor="@color/HC_ash_grey"
            android:textSize="24sp"
            android:layout_marginStart="24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/third_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_score"
        android:padding="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_rect_green"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/one_star"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/HC_purple"
            android:src="@drawable/icon_star_three"
            android:scaleType="fitCenter"
            android:padding="6dp"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/user_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/one_star"
            android:text="SuperUser3"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/score_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_three"
            android:layout_toEndOf="@id/one_star"
            android:text="777777"
            android:textColor="@color/HC_ash_grey"
            android:textSize="24sp"
            android:layout_marginStart="24dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/HC_ash_grey"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/my_score_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/score_value_textview"
            android:text="My Score"
            android:textAlignment="center"
            android:textColor="@color/HC_light_green"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/score_value_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/region_textview"
            android:text="99999"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/region_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/menu_button"
            android:layout_alignEnd="@+id/menu_button"
            android:text="Ranking: "
            android:textAlignment="center"
            android:textColor="@color/HC_light_green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/region_value_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/region_textview"
            android:layout_above="@id/menu_button"
            android:text="700"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/semicircle_button"
            android:elevation="6dp"
            android:src="@drawable/half_logo"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

</RelativeLayout>