<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/edit_info_fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/edit_info_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/icon_edit"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClick"
        android:layout_marginTop="48dp"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_info_image"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="USERNAME"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/phone_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="800-267-2001"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/username_textview"
        android:layout_marginHorizontal="60dp"/>

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my_email@email.com"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/phone_textview"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="12dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect_purple"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/menu_button"
        android:layout_marginBottom="24dp"
        android:text="LOGOUT"
        android:padding="14dp"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/semicircle_button"
        android:elevation="6dp"
        android:src="@drawable/half_logo"
        android:scaleType="fitCenter"/>

</RelativeLayout>