<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_button_light"
        android:src="@android:drawable/ic_dialog_dialer"
        android:padding="6dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentEnd="true"
        android:elevation="6dp"/>

    <ImageButton
        android:id="@+id/logo_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_button"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="USERNAME"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/phone_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-800-267-2001"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/username_textview"
        android:layout_marginHorizontal="60dp"/>

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="my_email@email.com"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@id/phone_textview"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_textview"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="60dp"
        android:background="@color/HC_ash_grey" />

    <CheckBox
        android:id="@+id/geolocation_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/background"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="60dp"
        android:text="Record Geolocation"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>